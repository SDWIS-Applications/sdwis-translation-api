{
  "name": "SDWIS Translation API",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:22",
  "postCreateCommand": "npm install",
  "postAttachCommand": "nohup npm start > /tmp/api.log 2>&1 &",
  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "API",
      "onAutoForward": "openBrowser"
    }
  },
  "containerEnv": {
    "DEMO_MODE": "true"
  }
}
